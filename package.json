{
  "name": "bot_yodobashi",
  "version": "1.0.0",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.yodobashi.bot",
    "productName": "YodobashiBot",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "bot/**/*",
      "ui/**/*",
      "node_modules/**/*",
      "!**/*.map",
      "!**/*.ts",
      "!**/*.md",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}"
    ],
    "extraResources": [
      {
        "from": "chrome-mac",
        "to": "chrome-mac",
        "filter": ["**/*"]
      },
      {
        "from": "chrome-win",
        "to": "chrome-win",
        "filter": ["**/*"]
      }
    ],
    "asar": true,
    "mac": {
      "target": "dmg",
      "icon": "icon/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "icon/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "YodobashiBot"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Yodobashi auto-buy bot with Electron UI",
  "dependencies": {
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "firebase": "^12.0.0",
    "puppeteer-core": "^24.10.2",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "user-agents": "^1.1.616"
  },
  "devDependencies": {
    "electron": "^37.0.0",
    "electron-builder": "^26.0.12"
  }
}
